<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!-- <script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <div id="map"></div> -->
<div class="row">
    <div class="col-md-6">
      <div id='results'>
        <% @resturants.each do |food| %>
            <div class="panel panel-default">
              <div class="panel-heading"><a href=<%= "/resturants/#{food.phone}" %> ><%= food.name%></a></div>
              <div class="panel-body">
                <div class='col-md-3'>
                  <img src=<%= food.img %> alt="food" >
                </div>
                <div class='col-md-8'>
                  <p>Yelp Rating: <%= food.yelpratingicon %></p>
                  <p>Number of Yelp Reviews: <%= food.yelpreviews %></p>
                  <p>Food Type: <%= food.foodtype %></p>
                  <p>Address: <%= food.address %></p>
                  <p>Phone Number: <%= food.phone %></p>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class='col-md-4' id="map">
    </div>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end if @locations %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
