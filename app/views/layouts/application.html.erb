<!DOCTYPE html>
<html>
  <head>
    <title>Access-Able</title>
    <%= csrf_meta_tags %>
    <link href="/assets/application.css" media="all" rel="stylesheet">
    <!-- <link rel="stylesheet" type="text/css" href="/app/assets/stylesheets/application.css"> -->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script type="text/javascript" media="all" src="/assets/application.js"></script>
    <script type="text/javascript" media="all" src="/assets/buttons.js"></script>
    <link rel="stylesheet" href="css/buttons.css">
    <script src="https://maps.googleapis.com/maps/api/js?"> </script>
  </head>

  <body>
  	
    
   <!--  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
  	</head>
    <h1 id="logo">Access-Able</h1>
    <% if user_signed_in? %>
    	<% if current_page?(url_for(:controller => 'welcome', :action => 'index')) %>
     		<div id="navbar">
      			<div id="welcomeuser">
      				<ul>
 		     			<span>Welcome, <%= current_user.username %></span>
 		     			<li><a href="/users/sign_out" class="button button-rounded button-flat-primary">SignOut</a></li>
 		    		</ul>
 	  			</div>
 	 		</div>
 		<% else %>
 	 		<div id="navbar">
      			<div id="welcomeuser">
      				<ul>
 		     			<li><a href="/users/sign_out" class="button button-rounded button-flat-primary">SignOut</a></li>
 		    		</ul>
 	  			</div>
 	 		</div>
 	 	<% end %>
 	<% else %>
 	  <div id="navbar">
 	  	<ul>
 	  		<li><a href="/users/sign_in" class="button button-rounded button-flat-primary">Login</a></li>
 	  		<span class="button-dropdown" data-buttons="dropdown">
  				<a href="#" class="button button-rounded button-flat-primary">Sign Up <i class="fa fa-caret-down"></i></a>
  				<ul class="button-dropdown-menu-below">
    				<li><a href="/users/auth/twitter">Twitter Signup</a></li>
    				<li><a href="/users/auth/facebook">Facebook Signup</a></li>
    				<li class="button-dropdown-divider"><a href="/users/sign_up">Email Signup</a></li>
  				</ul>
			</span>
 	  	</ul>
 	  </div>
 	<% end %>
  <form class="navbar-form navbar-left" role="search">
        <div class="form-group">

          <input type="text" id="search" class="form-control" placeholder="Search">

        </div>
        <button type="submit" id='submit' class="btn btn-default">Submit</button>
  </form>
 	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
</body>

</html>
 

