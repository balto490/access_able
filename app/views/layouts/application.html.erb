<!DOCTYPE html>
<html>
  <head>
    <title>Access-Able</title>
    <%= csrf_meta_tags %>
    <link href="/assets/application.css" media="all" rel="stylesheet">
    <!-- <link rel="stylesheet" type="text/css" href="/app/assets/stylesheets/application.css"> -->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">
    <script type="text/javascript" media="all" src="/assets/application.js"></script>
    <script type="text/javascript" media="all" src="/assets/buttons.js"></script>
    <link rel="stylesheet" href="css/buttons.css">
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDZXUuKaPVZehWF-d8F9w7Ym51_NejE8eI&callback=initMap"
    type="text/javascript"></script>
    
  </head>

  <body>
  	
    
   <!--  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
  	</head>
    <h1 id="logo">Access-Able</h1>
    <% if user_signed_in? %>
     		<div id="navbar">
      			<div id="welcomeuser">
      				<ul>
 		     			   <span>Welcome, <%= current_user.username %></span>
                 <li class="button button-rounded button-flat-primary"><%= link_to "My Profile" %></li>
                 <li class="button button-rounded button-flat-primary"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
 		    		  </ul>
 	  			</div>
 	 		</div>
 	<% else %>
 	  <div id="navbar">
 	  	<ul>
 	  		<li><a href="/users/sign_in" class="button button-rounded button-flat-primary">Login</a></li>
 	  		<span class="button-dropdown" data-buttons="dropdown">
  				<a href="#" class="button button-rounded button-flat-primary">Sign Up <i class="fa fa-caret-down"></i></a>
  				<ul class="button-dropdown-menu-below">
    				<li><a href="/users/auth/twitter">Twitter Signup</a></li>
    				<li><a href="/users/auth/facebook">Facebook Signup</a></li>
    				<li class="button-dropdown-divider"><a href="/users/sign_up">Email Signup</a></li>
  				</ul>
			</span>
 	  	</ul>
 	  </div>
 	<% end %>
 	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
</body>

</html>
 

